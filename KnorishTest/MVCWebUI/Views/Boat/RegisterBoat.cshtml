@model MVCWebUI.Models.BoatRegistration

@{
    ViewData["Title"] = "RegisterBoat";
}


<h4>Boat Registration</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <h6  class="text-danger">
            @if(ViewBag.msg != "")
            {
                @ViewBag.msg;
            }
        </h6>
        <form asp-action="SaveBoat" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BoatName" class="control-label"></label>
                <input asp-for="BoatName" class="form-control" />
                <span asp-validation-for="BoatName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HourRate" class="control-label"></label>
                <input asp-for="HourRate" class="form-control" type="number"/>
                <span asp-validation-for="HourRate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BoatImage" class="control-label"></label>
                <input asp-for="BoatImage" class="form-control" type="file" />
                <span asp-validation-for="BoatImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
